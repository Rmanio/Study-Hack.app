 <!-- form handling -->

 <form action="/ADMIN/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <input type="hidden" name="id">
            <label>
                <input type="text" name="name" placeholder="Name">
            </label>
        </div>
        <div class="form-group">
            <label>
                <input type="text" name="city" placeholder="City">
            </label>
        </div>
        <div class="form-group">
            <label>
                <input type="email" name="email" placeholder="Email">
            </label>
        </div>
        <div class="form-group">
            <label for="gender" class="text-secondary">Gender:</label>
            <div class="radio inline">
                <input checked type="radio" id="radio-2" name="gender" value="Male" >
                <label for="radio-2" class="radio-label text-light">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" >
                <label for="radio-3" class="radio-label text-light">Female</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-light update">Save</button>
        </div>

    </div>
</form>