
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->
<title>Update User</title>
  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/ADMIN"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-light">Update User</h2>
            <span class="text-secondary">Use the below form to Update an account</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-secondary">Name:</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <label>
                <input type="text" name="name" value="<%= user.name %>" placeholder="Enter your name">
            </label>
        </div>
        <div class="form-group">
            <label for="city" class="text-secondary">City:</label>
            <label>
                <input type="text" class="ms-2" name="city" value="<%= user.city%>" placeholder="City where you located">
            </label>
        </div>
        <div class="form-group">
            <label for="Email" class="text-secondary">Email:</label>
            <label>
                <input type="email" name="email" value="<%= user.email%>" placeholder="example@gmail.com">
            </label>
        </div>

        <div class="form-group">
            <label for="gender" class="text-secondary">Gender:</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" <%= user.gender === 'Male' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label text-light">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female"  <%= user.gender === 'Female' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label text-light">Female</label>
            </div>
        </div>



        <div class="form-group">
            <button type="submit" class="btn text-light update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
