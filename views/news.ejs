<%- include("partials/header.ejs") %> 

<body>
<%- include("include/navbar.ejs") %>
<div id="header">
    <header>
        <div id="head-image">
            <img src="/img/news-header.jpeg" alt="news-header">
            <div class="overlay">.</div>
        </div>
        <div id="head-title">
            <h1>NEWS</h1>
        </div>
        <div id="head-content">
            <p class="lead"><span>Improve your development skills</span> by using StudyHack that continuously challenge and push your educational practice.</p>
            <hr>
            <a href="#news" class="btn btn-light">Get Started</a>
        </div>
    </header>
</div>
<%- include("partials/navbar.ejs") %> 

    <div class="news-container ">
        <div class="news" id="news">

            <% articles.forEach(function(article,index){ %>

                <% if ((typeof article.url=='object') || (typeof article.title=='object') || (typeof article.urlToImage=='object') || (typeof article.content=='object')){ %>
                    <% } else{ %>
                        <a href="<%- article.url %>" target="_blank" class="news-box Hover-effect">

                            <img src="<%- article.urlToImage %>" alt="Image">
                            <h3>
                                <%- article.title %>
                            </h3>


                            <p>
                                <%- article.content.replace(/<[^>]+>/g, '') %>
                            </p>
                            <br>
                            <p style="margin-bottom: 0px; position: absolute; right: 0; bottom: 0; font-family: ui-monospace;"><span style="color:red;" ><%- new Date(article.publishedAt.slice(0,10)).toLocaleDateString('en-EN', {year: 'numeric', month:'long', day:'numeric',hour:'2-digit',minute:'2-digit'}) %>    </span></p>


                        </a>
                        <% } %>
                        <% }) %>
        </div>
    </div>

<script src="moment.js"></script>
<script src="moment-timezone-with-data.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>

</html>