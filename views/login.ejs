<title>Sign in</title>
<style>
    body{
        background: rgb(34, 40, 49);
    }
    button[type="submit"]{
        background: rgb(0, 173, 181);
        border-color: rgb(0, 173, 181);
    }
    button[type="submit"]:hover {
        background: rgb(58, 130, 133);
        border-color: rgb(58, 130, 133);
    }
    #login-link-foot{color: rgb(0, 173, 181);}
    #login-link-foot:hover {color: rgb(58, 130, 133);}

    #main-card{
        box-shadow: 0.5vw 0.5vw 3px lightgray;
    }
    .form-group label{
        display: none;
    }
    .form-group input {
        border: none;
        border-bottom: 0.1vw grey solid;
        margin: 0.7vw 0 0.1vw;
    }
</style>
<div class="mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body" id="main-card">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
            <%- include ('./include/messages') %>
            <form action="/users/login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                            placeholder="Enter Email"
                    />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                            type="password"
                            id="password"
                            name="password"
                            class="form-control"
                            placeholder="Enter Password"
                    />
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-3">Login</button>
            </form>
            <p class="lead mt-4">
                Need an Account? <a href="/users/register" id="login-link-foot">Register</a>
            </p>
        </div>
    </div>
</div>
